@model IEnumerable<MVCTutorial.Models.Company>

@{
    ViewBag.Title = "Company";
    Layout = "_Layout";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Company List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Company
            </a>
        </div>
    </div>
    <br/><br/>

    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
        <tr>
            <th>
                Company Name
            </th>
            <th>
                Company StreetAddress
            </th>
            <th>
                Company City
            </th>
            <th>
                Company State
            </th>
            <th>
                Company PostalCode
            </th>
            <th>
                Company PhoneNumber
            </th>
            
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var company in Model)
        {
            <tr>
                <td style="width: 50%">
                    @company.Name
                </td>
                <td style="width: 50%">
                    @company.StreetAddress
                </td>
                <td style="width: 50%">
                    @company.City
                </td>
                <td style="width: 50%">
                    @company.State
                </td>
                <td style="width: 50%">
                    @company.PostalCode
                </td>
                <td style="width: 50%">
                    @company.PhoneNumber
                </td>
                
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-primary mx-2" asp-controller="Company" asp-action="Edit" asp-route-id="@company.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a class="btn btn-danger mx-2" asp-controller="Company" asp-action="Delete" asp-route-id="@company.Id"><i class="bi bi-pencil-square"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>