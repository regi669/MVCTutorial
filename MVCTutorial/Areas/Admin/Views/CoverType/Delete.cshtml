@model MVCTutorial.Models.CoverType

@{
    ViewBag.Title = "Delete Cover Type";
    Layout = "_Layout";
}

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Cover Type</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control"/>
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary">Back to list</a>
    </div>
</form>
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
